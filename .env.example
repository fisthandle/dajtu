# Server
PORT=8080
DATA_DIR=/data
BASE_URL=https://dajtu.com
MAX_FILE_SIZE_MB=20
MAX_DISK_GB=50
CLEANUP_TARGET_GB=45
KEEP_ORIGINAL_FORMAT=true

# CORS - comma-separated list of allowed origins (empty = allow all)
ALLOWED_ORIGINS=braterstwo.eu,localhost

# Public upload - set to false to require SSO for all uploads
PUBLIC_UPLOAD=true

# Brat SSO (leave empty to disable)
BRAT_HASH_SECRET=
BRAT_ENCRYPTION_KEY=
BRAT_ENCRYPTION_IV=
BRAT_CIPHER=AES-256-CBC
BRAT_HASH_LENGTH=10
BRAT_HASH_BYTES=5
BRAT_MAX_SKEW_SECONDS=600
BRAT_MAX_PSEUDONIM_BYTES=255
