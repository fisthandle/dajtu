# Server
PORT=8080
DATA_DIR=./data
BASE_URL=https://dajtu.com

# Limits
MAX_FILE_SIZE_MB=20
MAX_DISK_GB=50
CLEANUP_TARGET_GB=45

# SSO Braterstwo (wymagane dla /auth/brat/)
BRAT_HASH_SECRET=your_hash_secret_here
BRAT_ENCRYPTION_KEY=your_encryption_key_here
BRAT_ENCRYPTION_IV=your_16_char_iv_here
BRAT_CIPHER=AES-256-CBC
BRAT_MAX_SKEW_SECONDS=600
BRAT_HASH_LENGTH=10
BRAT_HASH_BYTES=5
BRAT_MAX_PSEUDONIM_BYTES=255

# Original formats
KEEP_ORIGINAL_FORMAT=true
